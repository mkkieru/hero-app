{{#partial "content"}}
    <h1>ADD A HERO</h1>

    <hr>

    <form action="/tasks" method="post">
        <label for="name" >Name</label><br>
        <input type="text" id="name" name="name">
        <br>
        <label for="age" >Age</label><br>
        <input type="number" id="age" name="age">
        <br>
        <label for="specialPower" >Special Power</label><br>
        <input type="text" id="specialPower" name="specialPower">
        <br>
        <label for="weakness" >Weakness</label><br>
        <input type="text" id="weakness" name="weakness">
        <br>
        <label for="squad">Join which squad ?</label> <br>
        <select name="squadName">
            <option>AVENGERS</option>
            <option>JUSTICE LEAGUE</option>
        </select>
        <br>
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{/partial}}

{{> layout.hbs}}
